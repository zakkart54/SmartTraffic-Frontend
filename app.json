{
  "expo": {
    "scheme": "acme",
    "userInterfaceStyle": "automatic",
    "orientation": "default",
    "web": {
      "output": "static"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-audio",
        {
          "microphonePermission": "Cho phép ứng dụng sử dụng micro để ghi âm"
        }
      ]
    ],
    "name": "app",
    "slug": "app",
    "extra": {
      "EXPO_PUBLIC_API_URL": "http://10.0.2.2:5000"
    },
    "updates": {
      "enabled": false
    },
    "android": {
      "package": "com.smarttraffic.app"
    }
  }
}
